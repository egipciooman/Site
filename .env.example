# Database (Required for production on Render)
# Get this from: Render Dashboard > PostgreSQL > Internal Database URL
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Session secret (Required in production - generate with: node -e "require('crypto').randomBytes(32).toString('hex')")
SESSION_SECRET=your-secret-key-here-generate-random-32-bytes

# Environment
NODE_ENV=production

# Email (Resend API for sending verification & password reset emails)
RESEND_API_KEY=re_your_resend_api_key
SENDER_EMAIL=PlantaTON <onboarding@resend.dev>

# Google OAuth (Optional - for Google login)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# reCAPTCHA (Optional - for form protection)
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Web App URL
WEBAPP_URL=https://your-app.onrender.com

# WebSocket URL (if different from main URL)
# WS_URL=wss://your-app.onrender.com
